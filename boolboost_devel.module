/**
 * Implements hook_watchdog().
 */
function boolboost_devel_watchdog(array $log_entry) {
  if (in_array($log_entry['severity'], array(
    WATCHDOG_ERROR,
    WATCHDOG_WARNING,
    WATCHDOG_CRITICAL
  ))) {
    dpm(ddebug_backtrace(TRUE));
  }
}